#include<iostream>
using namespace std;

class SwitchNum
{
    public:
    int a=98,b=56;
    int*ptr1=&a;
    int*ptr2=&b;
    
    void Pointer()
    {
        cout<<"Before interchanging:\n";
        cout<<a<<endl;
        cout<<b<<endl;
        
    int temp=*ptr1;
    *ptr1=*ptr2;
    *ptr2=temp;
    cout<<"After interchanging:\n";
        cout<<a<<endl;
        cout<<b<<endl;
        
        
    }
};

int main()
{
    SwitchNum Num1;
    Num1.Pointer();
    
    return 0;
}
