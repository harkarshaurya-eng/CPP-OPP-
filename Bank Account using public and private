    long int AccNoGenerator()
    {
        random_device rd;    //Gets random seeds
        mt19937 gen(rd());  //mersenne Twister engine
        uniform_int_distribution<> dist(10000000, 99999999);   //range 100000 to 999999 for 8 digit account number

        AccountNo = dist(gen);

        cout << "Your Account number is:";
        cout << AccountNo;
        return AccountNo;
    }





