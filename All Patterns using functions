#include<iostream>
using namespace std;


class Pattern
{
public:
	void NumSquare(int i, int n)
	{
		cout << "Enter Number of lines you would like to print:" << endl;
		cin >> n;

		for (i = 0; i < n; i++)
		{
			cout << "1 2 3 4" << endl;
		}
	}

	void NumPyramid(int i, int j, int n, int k)
	{
		cout << "Enter Number of lines you would like to print" << endl;
		cin >> n;

		for (i = 1; i <= n; i++) //for rows
		{
			for (j = 1; j <= n - i; j++) //for spaces
			{
				cout << " ";

			}
			for (k = 1; k <= i; k++) //for *
			{
				cout << "  " << k;
			}
			cout << endl;
		}
	}

	void NumPyLeft(int i, int n, int j)
	{
		cout << "Enter Number of lines you would like to print" << endl;
		cin >> n;

		for (i = 1; i <= n; i++)
		{
			for (j = 1; j <= i; j++)
			{
				cout << j << " ";

			}
			cout << endl;
		}

	}

	void NumPyRevLeft(int i, int n, int j)
	{
		cout << "Enter Number of lines you would like to print" << endl;
		cin >> n;

		for (i = 1; i <= n; i++) //for rows
		{
			for (j = 1; j <= n - i + 1; j++) //decreasing numbers
			{
				cout << j << " ";

			}
			cout << endl;
		}


	}

	void NumPyRight(int n, int k, int i, int j)
	{
		cout << "Enter Number of lines you would like to print" << endl;
		cin >> n;

		for (i = 1; i <= n; i++)
		{
			for (j = 1; j <= n - i; j++) //for spaces
			{
				cout << " ";
				
			}
			for (k = 1; k <= i; k++) //for numbers
			{
				cout << k;
			}
			cout << endl;//new line
		}
	}

	void NumPyRevRight(int i, int j, int k, int n)
	{
		cout << "Enter Number of lines you would like to print" << endl;
		cin >> n;
		
		for (i = 1; i <= n; i++)// for rows
		{
			
			for (j = 1; j <=i-1;j++) //for spaces increasing
			{
				cout << " ";
			}
			for (k = 1; k <= n-i+1; k++) //for numbers decreasing
			{
				cout << k;
			}
			cout << endl;
			
		}

	}

	void StarPyramid(int i, int j, int n,int k)
	{
		cout << "Enter Number of lines you would like to print" << endl;
		cin >> n;

		for (i = 1; i <= n; i++) //for rows
		{
			for (j = 1; j <= n-i; j++) //for spaces
			{
				cout << " ";
				
			}
			for (k = 1; k <= i; k++) //for *
			{
				cout << "  *";
			}
			cout<< endl;
		}
	}
	void InvertedStarPy(int i, int j, int n, int k)
	{
		cout << "Enter Number of lines you would like to print" << endl;
		cin >> n;

		for (i = 1; i <= n; i++) //for rows
		{
			for (j = 1; j <= i-1; j++) //for spaces
			{
				cout << " ";

			}
			for (k = 1; k <= n-i+1; k++) //for *
			{
				cout << "  *";
			}
			cout << endl;
		}
	}

	};

	int main()
	{
		int i = 0, n = 0, a, j = 0,k, Choice;

		cout << "Which pattern would you like to print?" << endl;
		cout << "[1]Number Square" << endl;
		cout << "[2]Number pyramid" << endl;
		cout << "[3]Number pyramid(left)" << endl;
		cout << "[4]Number pyramid Reversed(left)" << endl;
		cout << "[5]Number pyramid (right)" << endl;
		cout << "[6]Number pyramid Reversed(right)" << endl;
		cout << "[7]Star pyramid" << endl;
		cout << "[8]Inverted Star pyramid" << endl;

		cin >> Choice;
		Pattern p;   //creating object
		if (Choice == 1)
		{
			p.NumSquare(i, n); //caling functions
		}
		else if (Choice == 2)
		{
			p.NumPyramid(i, j,k,n);
		}
		else if (Choice == 3)
		{
			p.NumPyLeft(i, n, j);
		}
		else if (Choice == 4)
		{
			p.NumPyRevLeft(i, n, j);
		}
		else if (Choice == 5)
		{
			p.NumPyRight(i,j,k,n);
		}
		else if (Choice==6)
		{
			p.NumPyRevRight(i, j, k, n);
		}
		else if (Choice == 7)
		{
			p.StarPyramid(i, j, k, n);
		}
		else if (Choice == 8)
		{
			p.InvertedStarPy(i,j,k,n);
		}
		return 0;

	}

